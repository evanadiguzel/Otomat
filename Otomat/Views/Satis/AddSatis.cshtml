@model Otomat.Models.Siniflar.Satis

@{
    ViewBag.Title = "AddSatis";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}



    <div class="container" style="background-color: #212529; width: 500px; height: 550px; position: center; margin-top: 10px; border: 5px solid #808080">
        <form class="form-group" method="post">
            <h5 style="color:white;margin-top:25px">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-cart3" viewBox="0 0 16 16" alignment-baseline="central">
                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                </svg>Sipariş Giriniz
            </h5>
            <div class="form-control" style="margin-top:25px">
                <label for="exampleFormControlSelect1">Adet Seçiniz</label>
                <select class="form-select" id="SatisAdet" name="SatisAdet" value="@ViewBag.SatisAdet">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <div class="mt-3">

                    <label for="sayi2" class="form-label">Fiyat</label>
                    <input type="text" id="Fiyat" name="Fiyat" class="form-control" value="@ViewBag.fyt">
                </div>
                <div class="mt-3">
                    <label for="textInput" class="form-label">Tutar</label>

                    <input type="text" id="Tutar" name="Tutar" class="form-control" value="@ViewBag.toplam" />
                    <input type="hidden" id="Satisid" name="Satisid">
                    <input type="hidden" id="Productid" name="Productid" value="@ViewBag.pid"/>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-dark">Sipariş Oluştur</button>
                    
                </div>
            </div>

        </form>

    </div>
